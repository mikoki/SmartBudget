@model SmartBudget.Models.User;
@{
    Layout = null;
    var emailExists = TempData["DuplicateEmail"] as string;
    var usernameExists = TempData["DuplicateUsername"] as string;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-united.css" />
    <title>Register</title>
</head>
<body>

    <div class="container">
        <div class="row vh-100 gap-lg-1">
            <div class="row align-items-center">
                <img class="h-50 w-auto" src="~/images/logo.png" />
            </div>
            <div class="row align-items-center">
                <div class="col">
                    <img src="~/images/welcome.jpg" />
                </div>
                <div class="col">
                    <form class="container" form method="post" asp-action="register">
                        <div class="row g-3 p-lg-2">
                            <div class="col">
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="First name" aria-label="First name">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <input type="text" asp-for="LastName" class="form-control" placeholder="Last name" aria-label="Last name">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-3 p-lg-2">
                            <div class="col">
                                <input type="date" asp-for="BirthDate" class="form-control" placeholder="Birthday date" aria-label="Birthday date">
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-3 p-lg-2">
                            <div class="col">
                                <input type="text" asp-for="Email" class="form-control" placeholder="Email" aria-label="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        @if ((!string.IsNullOrEmpty(emailExists)))
                        {
                            <div class="alert alert-dismissible alert-danger">
                                <a>@emailExists</a>
                            </div>
                        }
                        <div class="row g-3 p-lg-2">
                            <div class="col">
                                <input type="text" asp-for="Username" class="form-control" placeholder="Username" aria-label="Username">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <input type="password" asp-for="Password" class="form-control" placeholder="Password" aria-label="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>


                            @if ((!string.IsNullOrEmpty(usernameExists)))
                            {
                                <div class="alert alert-dismissible alert-danger">
                                    <a>@usernameExists</a>
                                </div>
                            }
                        </div>
                        <div class="row g-3 p-lg-2">
                            <br />
                            <input class="btn btn-primary" type="submit" value="Register" />
                        </div>
                        <div class="row g-3 p-lg-2">
                            <br />
                            <h6>Already have an account? Click the button to login.</h6>
                            <a class="btn btn-outline-primary" asp-controller="Login" asp-action="LoginPage">Login</a>@*Connection between register and controler*@
                        </div>
                    </form>
                </div>
            </div>

            <div class="row align-items-center justify-content-start">

            </div>
        </div>
    </div>
</body>
</html>
