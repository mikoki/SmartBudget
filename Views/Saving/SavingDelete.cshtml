@model SmartBudget.Models.Saving
@{
    ViewData["Title"] = "SavingDelete";
}

<body>
    <div class="container h-100">
        <div class="row h-100 justify-content-start">
            <div class="col-4 mt-4">
                <form asp-action="SavingDelete" method="post" asp-route-id="@Model.Id">
                    <h2>Confirm deletion</h2>
                    <p>Are you sure you want to delete this item? Deleting <a class="text-info">@Model.Title</a> will also delete all history kept for this saving.</p>
                    <input class="btn btn-info" type="submit" value="Delete" />
                    <a class="btn btn-info" asp-controller="Saving" asp-action="Index">Back</a> @*Connection between income type delete and index*@
                </form>
            </div>
            <div class="col-1 mt-4 px-0">
                <img style="max-height: 150px;" src="~/images/DeleteConfirmSaving.png" />
            </div>
        </div>
    </div>
</body>
